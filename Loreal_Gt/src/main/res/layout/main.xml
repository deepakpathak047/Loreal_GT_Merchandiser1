<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/primarycolor"
         >

        <TextView
            android:id="@+id/geotag_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="LOGIN"
            android:textColor="#fff" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gsklogo"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/parinaam_logo"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="version"
        android:textColor="@color/primarycolor"
        android:textSize="@dimen/text_size_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@drawable/login_bg"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/username_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/login_usertextbox"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/txt_box_b_ico"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColorHint="#333"
                    android:textSize="14dp"></EditText>

                <TextView
                    android:id="@+id/password_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#333"
                    android:textSize="14dp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/login_locktextbox"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/txt_box_bg_ico"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColorHint="#333"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:id="@+id/imagddiw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/login_loginbtn"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/signin_btn"/>
                </LinearLayout>
            </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViaw"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/lorealimg2" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loginfooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/aishwaryarai"
        />
</LinearLayout>

</LinearLayout>